{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist/test",
    "rootDir": "./test",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "test/*": [
        "test/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "test/**/*"
  ],
  "exclude": [
    "dist/**/*"
  ]
}
